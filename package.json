{
  "name": "portfolio-website",
  "version": "1.0.0",
  "description": "A modern portfolio website with Express.js backend and React frontend",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm install && cd frontend && npm install --include=dev && npm run build && cd ..",
    "start": "node backend/server.js",
    "deploy": "npm run build && npm start",
    "install:all": "npm install && npm install --prefix frontend",
    "test": "npm run test --prefix frontend",
    "test:frontend": "npm run test --prefix frontend"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "portfolio",
    "full-stack-developer",
    "data-scientist",
    "react",
    "typescript",
    "tailwindcss",
    "shanid-sajjatuz-islam"
  ],
  "author": "Shanid Sajjatuz Islam",
  "license": "MIT"
}